<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChatActivity"
android:orientation="vertical" android:padding="20dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView android:layout_width="100dp"
                                                      android:layout_height="100dp"
                                                      android:src="@color/purple_700"
                                                      android:layout_gravity="center"
        android:id="@+id/chat__userprofileimage"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hello" android:layout_gravity="center"
        android:padding="10sp" android:textStyle="bold" android:textSize="20sp" android:id="@+id/chat__name"/>
    </LinearLayout>

</LinearLayout>